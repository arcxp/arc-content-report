# Arc XP Redirect Report Script Configuration
# Copy this file to .env and fill in your actual credentials

# Arc XP Organization ID
ORG_ID=your-org-id-here

# API Bearer Token (get this from Arc XP)
BEARER_TOKEN=your-bearer-token-here

# Website identifier
WEBSITE=org-website-here

# Environment (sandbox or production)
ENVIRONMENT=sandbox

# Redirects Report: Status checking (1 = enabled, 0 = disabled)
DO_404_OR_200=1

# Redirects Report: Website domain URL
WEBSITE_DOMAIN=https://www.your-domain-here.com

# Wires Report and Redirect Report Default date range (optional - can be overridden via command line)
DEFAULT_START_DATE=2020-09-01
DEFAULT_END_DATE=2020-09-30

# Wires Report and Redirect Report Default output filename prefix (optional - can be overridden via command line)
DEFAULT_REDIRECTS_OUTPUT_PREFIX=prefix-for-redirects-filename
DEFAULT_WIRES_OUTPUT_PREFIX=prefix-for-wires-filename

# Wires Report: Additional query filter, surrounded by quotes (optional - can be overridden via command line)
Q_EXTRA_FILTERS="optional query filters"

# Wires Report Additional query response fields to add to _sourceInclude (optional - can be overridden via command line)
Q_EXTRA_FIELDS=ans.field

# Images Report database names
LIGHTBOX_CACHE_DB=lightbox_photo_cache.db
LIGHTBOX_CACHE_DB_SANDBOX=lightbox_photo_cache_sandbox.db

# Worker configuration
MAX_WORKERS=8
AUTO_OPTIMIZE_WORKERS=1
